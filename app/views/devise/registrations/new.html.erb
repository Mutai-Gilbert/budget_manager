<div class="min-h-screen bg-[#fbe6d4] flex items-center justify-center">
  <div class="max-w-lg w-full bg-gradient-to-b from-gray-900 to-gray-800 rounded-3xl shadow-2xl p-8">
    <% content_for :back_path, root_path %>
    <% content_for :page_name, "REGISTRATION" %>
    <% content_for :nav_button do %>
      <%= button_tag "Sign Up", class: "text-white" %>
    <% end %>

    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-white">Register</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
        html: { 
          class: "space-y-4",
          data: {
            controller: "auth",
            auth_mock_enabled_value: Rails.env.development?,
            auth_mock_email_value: Rails.env.development? ? MOCK_USER[:email] : nil,
            auth_mock_password_value: Rails.env.development? ? MOCK_USER[:password] : nil
          }
        }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <%= f.text_field :name,
            autofocus: true,
            placeholder: "Name",
            required: true,
            data: { auth_target: "nameInput" },
            class: "w-full px-4 py-3 rounded-xl bg-gray-800 border border-gray-600 
                    text-gray-100 placeholder-gray-500 focus:border-blue-500 
                    focus:ring-2 focus:ring-blue-500 focus:outline-none 
                    shadow-inner transition duration-200" %>

        <%= f.email_field :email,
            autocomplete: "email",
            placeholder: "Email",
            required: true,
            data: { auth_target: "emailInput" },
            class: "w-full px-4 py-3 rounded-xl bg-gray-800 border border-gray-600 
                    text-gray-100 placeholder-gray-500 focus:border-blue-500 
                    focus:ring-2 focus:ring-blue-500 focus:outline-none 
                    shadow-inner transition duration-200" %>

        <%= f.password_field :password,
            autocomplete: "new-password",
            placeholder: "Password",
            required: true,
            data: { auth_target: "passwordInput" },
            class: "w-full px-4 py-3 rounded-xl bg-gray-800 border border-gray-600 
                    text-gray-100 placeholder-gray-500 focus:border-blue-500 
                    focus:ring-2 focus:ring-blue-500 focus:outline-none 
                    shadow-inner transition duration-200" %>

        <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            placeholder: "Confirm Password",
            required: true,
            data: { auth_target: "passwordConfirmInput" },
            class: "w-full px-4 py-3 rounded-xl bg-gray-800 border border-gray-600 
                    text-gray-100 placeholder-gray-500 focus:border-blue-500 
                    focus:ring-2 focus:ring-blue-500 focus:outline-none 
                    shadow-inner transition duration-200" %>
      </div>

      <div class="mt-6">
        <%= f.submit "Sign up",
            data: { action: "click->auth#handleSignup" },
            class: "w-full bg-blue-600 text-white py-3 rounded-xl 
                    hover:bg-blue-700 transition duration-200" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <p class="text-white">Already have an account? 
        <%= link_to "Log in", new_session_path(resource_name), 
            class: "text-blue-400 hover:text-blue-300 underline" %>
      </p>
    </div>
  </div>
</div>
