<div class="mx-auto px-4 flex flex-col items-center justify-center align-items-center">
  <% content_for :back_path, root_path %>
  <% content_for :page_name, "REGISTRATION" %>
  <% content_for :nav_button do %>
  <%= button_tag "Sign Up", class: "text-white" %>
  <% end %>

  <div class="text-center mb-8">
  <h2 class="text-3xl font-bold text-white">Register</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="space-y-4">
    <%= f.text_field :name,
        autofocus: true,
        placeholder: "Name",
        required: true,
        class: "w-full px-4 py-3 rounded-xl bg-white text-gray-900 placeholder-gray-500 border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>

    <%= f.email_field :email,
        autocomplete: "email",
        placeholder: "Email",
        required: true,
        class: "w-full px-4 py-3 rounded-xl bg-white text-gray-900 placeholder-gray-500 border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>

    <%= f.password_field :password,
        autocomplete: "new-password",
        placeholder: "Password",
        required: true,
        class: "w-full px-4 py-3 rounded-xl bg-white text-gray-900 placeholder-gray-500 border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>

    <%= f.password_field :password_confirmation,
        autocomplete: "new-password",
        placeholder: "Confirm Password",
        required: true,
        class: "w-full px-4 py-3 rounded-xl bg-white text-gray-900 placeholder-gray-500 border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>
  </div>

  <div class="mt-6">
    <%= f.submit "Sign up",
        class: "w-full bg-blue-600 text-white py-3 rounded-xl font-medium hover:bg-blue-700 transition duration-200" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <p class="text-white">Already have an account? 
    <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-400 hover:text-blue-300 underline" %>
  </p>
</div>
