<div class="container mx-auto px-4 ">
  <h2 class="text-2xl font-bold mb-4">Register</h2>
  <% content_for :back_path, root_path %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "my-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "mx-auto p-2 border mb-4 border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "mx-auto p-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "mx-auto p-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "mx-auto p-2 border border-gray-300 rounded" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
