<h2 class="text-2xl font-bold mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mb-4"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border px-4 py-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-gray-600 text-sm">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "border px-4 py-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block mb-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border px-4 py-2 w-full" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
