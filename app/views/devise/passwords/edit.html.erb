<% content_for :nav_bar, "navbar not required" %>
<div class="my-5">
  <h2 class="text-2xl font-bold mb-4">Resend confirmation instructions</h2>
</div>

<div class="my-5">
  <h2 class="text-2xl font-bold mb-4">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "New password", class: "font-bold" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm new password", class: "font-bold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 px-3 py-2" %>
    </div>

    <div class="flex justify-center mt-5">
      <%= f.submit "Change my password", class: "btn btn-style btn-lg bg-blue-500 text-white px-4 py-2 rounded-md" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
