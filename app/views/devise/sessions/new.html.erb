<h2 class="text-2xl font-bold mb-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border px-4 py-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "border px-4 py-2 w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "select-none" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
