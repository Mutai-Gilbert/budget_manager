<div class="mx-auto px-4 bg-gray-100">
  <% content_for :back_path, root_path %>
  <% content_for :page_name, "LOGIN" %>

  <% content_for :nav_button do %>
    <%= button_tag "Log in", type: "submit", form: "new_user", class: "nav-link text-white" %>
  <% end %>

  <div class="container mx-auto px-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "new_user", class: "my-4" }) do |f| %>
      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-field border-0 border-b py-2 px-3 rounded-md", placeholder: "Email" %>
      </div>

      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-field border-0 border-b py-2 px-3 rounded-md", placeholder: "Password" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Log in", class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
