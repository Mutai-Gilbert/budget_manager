<div class="mx-auto px-4 flex flex-col items-center justify-center align-items-center">
  <% content_for :back_path, root_path %>
  <% content_for :page_name, "LOGIN" %>
  <% content_for :nav_button do %>
    <%= button_tag "Log In", class: "text-white" %>
  <% end %>

  <div class="text-center mb-8">
    <h2 class="text-3xl font-bold text-white">Log In</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="space-y-4">
      <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          placeholder: "Email",
          required: true,
          class: "w-full px-4 py-3 rounded-xl bg-white/10 border border-white/10 text-white placeholder-gray-400 backdrop-blur-sm shadow-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>

      <%= f.password_field :password,
          autocomplete: "current-password",
          placeholder: "Password",
          required: true,
          class: "w-full px-4 py-3 rounded-xl bg-white/10 border border-white/10 text-white placeholder-gray-400 backdrop-blur-sm shadow-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-white" %>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <%= f.submit "Log in",
          class: "w-full bg-blue-600 text-white py-3 rounded-xl font-medium hover:bg-blue-700 transition duration-200 shadow-lg cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <p class="text-white">Don't have an account? 
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-400 hover:text-blue-300 underline" %>
    </p>
  </div>
</div>