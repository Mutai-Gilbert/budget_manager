<div class="mx-auto px-4 bg-gray-100 flex items-center justify-center align-items-center w-full">
<% content_for :back_path, root_path %>
<% content_for :page_name, "LOGIN" %>

<% content_for :nav_button do %>
  <%= button_tag "Log in", type: "submit", form: "new_user", class: "nav-link text-white" %>
<% end %>

<div class="container mx-auto px-4 gap-8 flex justify-center align-items-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "new_user", class: "my-4" }) do |f| %>
  <div class="mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-field border-0 border-b w-full", placeholder: "Email" %>
  </div>

  <div class="mb-4">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-field border-0 border-b", placeholder: "Password" %>
  </div>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="mb-4">
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-blue-500 text-sm underline" %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.submit "Log in", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>