<div class="min-h-screen bg-[#fbe6d4] flex items-center justify-center">
  <div class="max-w-lg w-full bg-gradient-to-b from-gray-900 to-gray-800 rounded-3xl shadow-2xl p-8">
    <% content_for :back_path, root_path %>
    <% content_for :page_name, "LOGIN" %>
    <% content_for :nav_button do %>
      <%= button_tag "Log In", class: "text-white" %>
    <% end %>

    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-white">Log In</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4">
        <%= f.email_field :email,
            value: (mock_credentials[:email] if mock_auth_enabled?),
            class: "w-full px-4 py-3 rounded-xl bg-white/10 border border-white/10 text-white placeholder-gray-400 backdrop-blur-sm" %>

        <%= f.password_field :password,
            value: (mock_credentials[:password] if mock_auth_enabled?),
            class: "w-full px-4 py-3 rounded-xl bg-white/10 border border-white/10 text-white placeholder-gray-400 backdrop-blur-sm" %>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-white" %>
          </div>
        <% end %>
      </div>

      <%= f.submit "Log in", class: "w-full mt-6 bg-blue-600 text-white py-3 rounded-xl" %>
    <% end %>

    <div class="mt-4 text-center">
      <p class="text-white">Don't have an account? 
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-400 hover:text-blue-300 underline" %>
      </p>
    </div>
  </div>
</div>