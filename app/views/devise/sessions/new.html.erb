<div class="min-h-screen bg-[#fbe6d4] flex items-center justify-center">
  <div class="max-w-lg w-full bg-gradient-to-b from-gray-900 to-gray-800 rounded-3xl shadow-2xl p-8">
    <% content_for :back_path, root_path %>
    <% content_for :page_name, "LOGIN" %>
    <% content_for :nav_button do %>
      <%= button_tag "Log In", class: "text-white" %>
    <% end %>

    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-white">Log In</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
        html: { 
          class: "space-y-4",
          data: { 
            controller: "auth",
            turbo: false 
          }
        }) do |f| %>

      <div class="space-y-4">
        <%= f.email_field :email,
            placeholder: "Email",
            class: "w-full px-4 py-3 rounded-xl bg-gray-800 border border-gray-600 
                    text-gray-100 placeholder-gray-500 focus:border-blue-500 
                    focus:ring-2 focus:ring-blue-500 focus:outline-none 
                    shadow-inner transition duration-200" %>

        <%= f.password_field :password,
            placeholder: "Password",
            class: "w-full px-4 py-3 rounded-xl bg-gray-800 border border-gray-600 
                    text-gray-100 placeholder-gray-500 focus:border-blue-500 
                    focus:ring-2 focus:ring-blue-500 focus:outline-none 
                    shadow-inner transition duration-200" %>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, 
                class: "w-4 h-4 text-blue-600 bg-gray-800 border-gray-600 
                        rounded focus:ring-blue-500" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-gray-300" %>
          </div>
        <% end %>
      </div>

      <div class="mt-6">
        <%= f.submit "Log in",
            class: "w-full bg-blue-600 text-white py-3 rounded-xl 
                    hover:bg-blue-700 transition duration-200" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <p class="text-white">Don't have an account? 
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-400 hover:text-blue-300 underline" %>
      </p>
    </div>
  </div>
</div>