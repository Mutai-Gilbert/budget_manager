<% unless content_for?(:nav_bar) %>
  <nav class="navbar navbar-expand-lg bg-blue-500">
    <% if content_for?(:page_name) %>
      <%= link_to yield(:back_path), class: "navbar-brand text-white" do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
    <% end %>

    <% if content_for?(:page_name) %>
      <div class="flex justify-center flex-grow">
        <span class="text-white proxima-semi-bold"><%=yield(:page_name)%></span>
      </div>
    <% end %>

    <% if content_for?(:nav_button) %>
      <ul class="ml-auto">
        <li class="proxima-semi-bold">
          <%= yield(:nav_button) %>
        </li>
      </ul>
    <% end %>
  </nav>
<% end %>
