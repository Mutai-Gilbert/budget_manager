<div class="bg-white shadow-lg rounded-lg flex items-center px-2 py-2">
  <div class="w-1/2 h-20 flex items-center justify-center">
    <div class="w-12 h-12 flex items-center justify-center <%= category_color_class(category.name) %> rounded-full">
      <%= category_icon(category.name) %>
    </div>
  </div>
  <div class="flex flex-row justify-between items-center w-1/2">
    <%= link_to category.name, category_transaction_entries_path(category), class: "nav-link justify-start" %>
    <%= category.created_at.strftime('%d %b %Y') %>
    <span class="justify-end">$<%= category.transaction_entries.sum(:amount) %></span>
  </div> 
</div>