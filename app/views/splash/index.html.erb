<% content_for :nav_bar, "navbar not required" %>
<div class="min-h-screen bg-[#fbe6d4] flex items-center justify-center">
  <!-- Main content with glassmorphism effect -->
  <div class="max-w-lg w-full bg-gradient-to-b from-gray-900 to-gray-800 rounded-3xl shadow-2xl p-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-white">Budget Manager</h1>
    </div>

    <div class="space-y-4 flex flex-col">
      <%= link_to new_user_session_path, 
          class: "w-full px-4 py-3 rounded-xl bg-white/10 border border-white/10 text-white backdrop-blur-sm shadow-lg hover:bg-white/20 transition duration-200 text-center" do %>
        LOG IN
      <% end %>

      <%= link_to new_user_registration_path, 
          class: "w-full px-4 py-3 rounded-xl bg-white/10 border border-white/10 text-white backdrop-blur-sm shadow-lg hover:bg-white/20 transition duration-200 text-center" do %>
        SIGN UP
      <% end %>
    </div>
  </div>
</div>
