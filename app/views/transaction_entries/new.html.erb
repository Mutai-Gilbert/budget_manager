<h1 class="text-2xl font-bold mb-4">New Transaction Entry</h1>

<% content_for :back_path, category_path(@category) %>
<% content_for :page_name, "CREATE TRANSACTION" %>
<% content_for :nav_button do%>
  <%= button_to "Logout", destroy_user_session_path, method: :delete,class: "nav-link text-white" %>
<%end%>

<div class="flex justify-center">
  <%= form_with model: @transaction_entry, class: "w-96" do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block font-bold" %>
      <%= form.text_field :name, class: "block w-full rounded-md border-gray-300 px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :amount, class: "block font-bold" %>
      <%= form.text_field :amount, class: "block w-full rounded-md border-gray-300 px-3 py-2" %>
    </div>

    <%= form.submit "Create Transaction Entry", class: "bg-blue-500 text-white font-bold px-4 py-2 rounded-md" %>
  <% end %>
</div>
